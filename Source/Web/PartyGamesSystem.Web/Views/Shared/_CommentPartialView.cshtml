@using PartyGamesSystem.Web.ViewModels
@model CommentViewModel

<div class="panel panel-party-games comment">
    <div class="panel-body">
        <div class="media">
            <div class="col-sm-12">
                <div class="row-fluid">
                    <i class="glyphicon glyphicon-user"></i> <span class="text-success">@Model.AuthorName</span>
                    <div class="pull-right mb5">
                        @Model.CommentedOn.ToString("dddd, dd MMMM yyyy, HH:mm")
                    </div>
                </div>
                <div class="row-fluid pt5">@Model.Content</div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
