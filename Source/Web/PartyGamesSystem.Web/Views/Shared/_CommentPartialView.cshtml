@using PartyGamesSystem.Web.ViewModels
@model CommentViewModel

<div class="panel panel-party-games">
    <div class="panel-body">
        <div class="media">
            <div class="col-sm-12">
                <div class="row-fluid">
                    <i class="glyphicon glyphicon-user"></i> <span class="text-success">@Model.AuthorName</span>
                    <div class="pull-right mb5">
                        <a href="javascript: void(0);" onclick="jQuery('#reply-1035726').toggleClass('hidden');"><i class="fa fa-reply"></i> Answer</a>
                        <a href="javascript: void(0);" onclick="like(2, 1035726);"><i class="glyphicon glyphicon-thumbs-up"></i> I like it (<span id="l1035726">1</span>)</a>
                        @Model.CommentedOn.ToLongDateString()
                    </div>
                </div>
                <div class="row-fluid pt5">@Model.Content</div>
            </div>
            <div class="clearfix"></div>
            <div class="clearfix"></div>
            <div class="row-fluid hidden" id="reply-1035726">
                <div class="col-md-1"></div>
                <div class="col-md-11 pb5">
                    <div class="row-fluid">
                        <div class="pull-left">
                            <form action="/comments/" method="post">
                                <div class="form-group mb0">
                                    <div class="input-group">
                                        <input type="text" class="form-control input-sm br0 bl0" name="text" placeholder="">
                                        <span class="input-group-btn">
                                            <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-reply"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
