@{
    ViewBag.SearchQuery = Request.QueryString["query"];
}

@using (Html.BeginForm("Index", null, FormMethod.Get))
{
    <div class="pull-right">
        <input class="rounded5" type="text" name="query" value="@ViewBag.SearchQuery" placeholder="Title..." />
        <input class="rounded5" type="submit" id="btnSubmit" value="Search by title" />
    </div>
}

<div class="clearfix"></div>

