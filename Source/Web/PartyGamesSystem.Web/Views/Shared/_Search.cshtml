@{
    ViewBag.SearchQuery = Request.QueryString["query"];
}

@using (Html.BeginForm("Index", null, FormMethod.Get))
{
    <div class="pull-right">
        <input type="text" name="query" value="@ViewBag.SearchQuery" placeholder="Search..." />
        <input type="submit" id="btnSubmit" value="Search by title" />
    </div>
}

