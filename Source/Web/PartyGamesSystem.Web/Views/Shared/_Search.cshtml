@{
    ViewBag.SearchQuery = Request.QueryString["query"];
}

@using (Html.BeginForm("Index", this.ViewContext.RouteData.Values["controller"].ToString(), FormMethod.Get))
{
    <div>
        <input type="text" name="query" value="@ViewBag.SearchQuery" />
        <input type="submit" placeholder="Search" id="btnSubmit" value="Search by title" />
    </div>
}
