@using PartyGamesSystem.Web.Helpers
@using PartyGamesSystem.Web.ViewModels
@model PartyGameViewModel

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="text-center">@Model.Title</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                @if (Model.ImageId != null)
                {
                    <img src="@Url.Action("Image", "Images", new { id = Model.ImageId.Value })" alt="@Model.Title image" class="img-responsive form-control-sm" />
                }
                else
                {
                    <span class="form-control form-control-sm">No image</span>
                }
                <br />
            </div>
            <div class="col-md-7">
                <br />
                <div class="well row">
                    <div class="col-md-4 text-info">CATEGORY:</div>
                    <div class="col-md-8 text-attention">@Model.CategoryName</div>
                </div>
                <div class="well row">
                    <div class="col-md-4 text-info">NECESSARY ITEMS:</div>
                    <div class="col-md-8 text-attention">@(Model.NecessaryItems == null || Model.NecessaryItems == string.Empty ? "Not listed" : Model.NecessaryItems)</div>
                </div>
                <div class="well row">
                    <div class="col-md-4 text-info">SUITABLE FOR:</div>
                    <div class="col-md-8 text-attention">@Html.ShowPlayingPeopleInfo(Model)</div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-info">
    <div class="panel-heading">
        <div class="panel-title">
            DESCRIPTION:
            <div class="panel panel-body text-attention">
                @Model.Description
            </div>
        </div>
    </div>
</div>
<div class="panel panel-party-games p0 panel-comments">
    @if (@Model.Comments.Count() == 0)
    {
        <div class="panel-heading panel-heading-add text-warning">
            There are no comments about this game
        </div>
        <div class="panel panel-body ">
            <div id="last-comment" class="panel panel-party-games"></div>
        </div>
    }
    else
    {
        <div class="panel-heading panel-heading-add">
            Comments about game "<b>@Model.Title</b>"
        </div>
        <div class="panel panel-body ">
            @foreach (var comment in @Model.Comments)
            {
                <div class="panel panel-party-games comment">
                    @Html.Partial("_CommentPartialView", comment)
                </div>
            }
            <div id="last-comment" class="panel panel-party-games"></div>
        </div>
    }

</div>
@if (User.Identity.IsAuthenticated)
{
    @Html.Partial("~/Views/Comments/_AddComment.cshtml", new CommentViewModel(Model.Id))
}
else
{
    <span class="text-danger">If you want to comment you should login to your account</span>
    @Html.ActionLink("Log in", "Login", "Account", routeValues: new { area = string.Empty }, htmlAttributes: null)
    <br />
}
@Html.Partial("_ManageButtonsPartial", Model)
