@using PartyGamesSystem.Web.ViewModels
@model IEnumerable<PartyGameViewModel>

@{
    ViewBag.Title = "Index";
}

@Html.Partial("_Search")

@if (Model.Count() == 0)
{
    <div class="panel panel-body text-danger">
        There are no games that match your search criteria
    </div>
}

else
{
    foreach (var game in Model)
    {
        <div class="panel panel-body" id="game-section-@game.Id">
            @Html.Partial("_PartyGameSingleView", game)
        </div>
    }
}



